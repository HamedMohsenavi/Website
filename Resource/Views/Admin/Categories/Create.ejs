<%- include(ViewPath('Errors')) %>

<form action="/Admin/Categories/Create" method="POST">
    <input type="text" name="Name" id="Name" placeholder="Category Name" value="<%= GetFormData('Name') %>"> <br>
    <select name="Parent" id="Parent">
        <option value="None">Owner</option>
        <% Categories.forEach(Category => { %>
            <option value="<%= Category._id %>" <%= String(GetFormData('Categories')) === String(Category._id) ? 'selected' : '' %>><%= Category.Name %></option>
        <% }) %>
    </select> <br>
    <button type="submit">Create</button>
</form>